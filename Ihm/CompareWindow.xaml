<Window x:Class="MazeSolver.Ihm.CompareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeSolver.Ihm"
        mc:Ignorable="d"
        Title="CompareWindow" Height="700" Width="1200">
    <Grid x:Name="grid">
        <GridSplitter HorizontalAlignment="Left" Height="600" Margin="600,0,0,0" VerticalAlignment="Top" Width="10"/>
        <Button Content="Generate Mazes" HorizontalAlignment="Left" Margin="564,50,0,0" VerticalAlignment="Top" Click="GenerateMazes"/>
        <Button Content="Resolve Mazes" HorizontalAlignment="Left" Margin="564,100,0,0" VerticalAlignment="Top" Click="ResolveMazes"/>
        <Label Content="Random Merge Paths" FontSize="24" HorizontalAlignment="Left" Margin="834,39,0,0" VerticalAlignment="Top"/>
        <Label Content="Exhaustive Exploration" FontSize="24" HorizontalAlignment="Left" Margin="156,39,0,0" VerticalAlignment="Top"/>
        <Grid x:Name="gridExhaustiveExploration" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="33,122,0,0" Width="540" Height="540"></Grid>
        <Grid x:Name="gridRandomMergePath" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="633,122,0,0" Width="540" Height="540"></Grid>
    </Grid>
</Window>
